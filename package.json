{
  "name": "aurelia-fast-adapter",
  "version": "1.0.0",
  "description": "Enables two-way bindings with FAST components in Aurelia 2 application",
  "main": "dist/commonjs/index.js",
  "module": "dist/native-modules/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ben-girardet/aurelia2-fast-adapter"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build:commonjs": "tsc --outDir dist/commonjs --module commonjs",
    "build:native-modules": "tsc --outDir dist/native-modules --module es2015",
    "build": "concurrently \"npm run build:commonjs\" \"npm run build:native-modules\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "aurelia",
    "fast"
  ],
  "author": "Ben Girardet",
  "license": "MIT",
  "peerDependencies": {
    "@aurelia/kernel": "latest",
    "@aurelia/runtime-html": "latest",
    "@microsoft/fast-foundation": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  }
}
